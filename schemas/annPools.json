                "announcements": {
                    "wasd": {
                        "priority": 1,
                        "text": "Warwick's Awesome Speedruns & Demos 2024"
                    },
                    "donate": {
                        "priority": 1,
                        "text": "Donate now at warwickspeed.run/donate"
                    },
                    "schedule": {
                        "priority": 1,
                        "text": "See the full schedule at warwickspeed.run/schedule"
                    },
                    "specialeffect": {
                        "priority": 1,
                        "text": "WASD 2023 is raising money for SpecialEffect"
                    }
                },
                "order": [
                    "wasd",
                    "donate",
                    "schedule",
                    "specialeffect"
                ]
