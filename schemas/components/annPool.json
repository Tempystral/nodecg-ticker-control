{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "properties": {
        "name": {
            "type": "string"
        },
        "priority": {
            "type": "number"
        },
        "announcements": {
            "type": "object",
            "additionalProperties": {
                "$ref": "announcement.json"
            }
        },
        "order": {
            "type": "array",
            "items": {
                "type": "string"
            }
        }
    },
    "required": [
        "name",
        "priority",
        "order",
        "announcements"
    ]
}